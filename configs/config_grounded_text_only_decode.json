  "subtopic": false,
  "use_predicted_topics": false,
  "text_only_decode": true,

  "random_seed": 0,
  "epochs": 1,
  "batch_size": 8,
  "learning_rate": 1e-4,
  "weight_decay": 0,
  "loss": "bce",
  "optimizer": "adam",
  "adam_epsilon": 1e-8,
  "segment_window": 256,
  "neg_samp": true,

  "log_path": "logs/grounded/",
